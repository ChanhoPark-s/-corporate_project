<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.mapper.SellDetailMapper">

	<insert id="insert">
		insert into sell_detail values(sell_detail_seq.nextval,#{item_no},#{amount},#{sell_price},#{lot_code},sell_seq.currval)
	</insert>

	<select id="read" resultType="com.spring.domain.SellDetailVO">
		select * from sell_detail order by no desc
	</select>
	
	<select id="selectAll" resultType="com.spring.domain.SellDetailVO">
        select sd.no, i.name as item_name, sd.amount, i.in_price as in_price, i.out_price as out_price
        from sell_detail sd,item i
        where sd.item_no = i.no
	</select>
	
	<select id="getTotalCount" resultType="int">
	 select count(*) from sell_detail
	</select>
</mapper>